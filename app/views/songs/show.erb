<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Song</h1>

<h2><em><%= @song.name%> </em></h2>


<h4>Artist:  <a href='/artists/<%= @song.artist.slug %>'><%= @song.artist.name%></a> </h4>
<h4>Genre:  <% @song.genres.each do |genre| %>
                    <a href='/genres/<%= genre.slug %>'><%= genre.name%></a>
            <% end %></h4> 
<br>
<br>
<h3><a href="/artists">All Artists</a></h3>
<h3><a href="/genres">All Genres</a></h3>