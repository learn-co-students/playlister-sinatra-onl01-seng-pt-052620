<h1>Update Song</h1>

<h2>Edits for <%= @song.name %></h2>

<form method="POST" action="/songs/<%= @song.slug %>">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Edit the Song's Name: </label>
    <br>
    <input type="text" name="song[name]" value="<%= @song.name %>">

    <br>
    <p>Select an existing genre or create a new one below. </p>

    <h3>Existing Genres</h3>
    <% @genres.each do |genre| %>
        <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" 
        <%="checked" if @song.genres.include?(genre) %>><%= genre.name %><br>
    <% end %>
    <br>

    <h3>New Artist</h3>
    <label>Artist Name: </label>
    <br>
    <input type="text" name="artist[name]" id="Artist Name" >
    <br><br>

    <input type="submit" value="Save">
</form>