<h1>Genre</h1>

<h2><em><%= @genre.name%> </em></h2>


<h4>Artists:  <% @genre.artists.each do |artist| %>
                <ul>
                   <li> <a href='/artists/<%= artist.slug %>'><%= artist.name%></a></li>
                </ul>
              <% end %></h4> 
<h4>Songs:  <% @genre.songs.each do |song| %>
                <ul>
                    <li><a href='/songs/<%= song.slug %>'><%= song.name%></a></li>
                </ul>
            <% end %></h4> 
<br>
